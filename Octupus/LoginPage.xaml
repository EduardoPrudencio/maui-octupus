<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModel="clr-namespace:Octupus.ViewModel"
             x:Class="Octupus.LoginPage">
    <ContentPage.BindingContext>
        <viewModel:LoginViewModel />
    </ContentPage.BindingContext>

    <Grid ColumnDefinitions="{OnPlatform Default='*, 1, *', Android='*', iOS='*'}">
        <VerticalStackLayout Grid.Column="0"
                             HorizontalOptions="Center"
                             VerticalOptions="Center"
                             >
            <Label Text="Octupus"
                   FontAttributes="Bold"
                   FontSize="43" 
                   HorizontalOptions="Center"
                   Margin="0,0,0,5"
                   />

            <Line BackgroundColor="White" 
                  Opacity=".3"
                  />

            <Label Text="Login" 
                   Margin="0,30,0,5"
                   />
            <HorizontalStackLayout Margin="0,0,0,10">
                <Border BackgroundColor="{StaticResource Secondary}"
                        WidthRequest="45"
                        HeightRequest="45"
                        StrokeThickness="0">
                    <Image Source="user_avatar.png"
                           WidthRequest="20"
                           HeightRequest="35"
                           HorizontalOptions="Center" />
                </Border>
                <Entry WidthRequest="300"
                       MaxLength="150"
                       Text="{Binding Login}"
                       />

            </HorizontalStackLayout >

            <Label Text="Password" 
                   Margin="0,0,0,5"
                   />

            <HorizontalStackLayout>
                <Border BackgroundColor="{StaticResource Secondary}"
                        WidthRequest="45"
                        HeightRequest="45"
                        StrokeThickness="0">
                    <Image Source="key.png" 
                           WidthRequest="20"
                           HeightRequest="35"
                           HorizontalOptions="Center"/>
                </Border>
                <Entry WidthRequest="300"
                       MaxLength="150" 
                       Text="{Binding Password}"
                       IsPassword="True"
                       />

            </HorizontalStackLayout>

            <Button Text="Login"
                    Command="{Binding LoginCimmand}"
                    Margin="0,100,0,0"
                    />

        </VerticalStackLayout>

        <Line BackgroundColor="White"
              Grid.Column="1"
              Margin="0,50,0,50">
            <Line.IsVisible>
                <OnPlatform x:TypeArguments="x:Boolean">
                    <On Platform="WinUI"
                        Value="True" />
                    <On Platform="MacCatalys"
                        Value="True" />
                    <On Platform="iOS"
                        Value="False" />
                    <On Platform="Android"
                        Value="False    " />

                </OnPlatform>
            </Line.IsVisible>
        </Line>

        <VerticalStackLayout Grid.Column="2">
            <VerticalStackLayout.IsVisible>
                <OnPlatform x:TypeArguments="x:Boolean">
                    <On Platform="WinUI"
                        Value="True" />
                    <On Platform="MacCatalyst"
                        Value="True" />
                    <On Platform="iOS"
                        Value="False" />
                    <On Platform="Android"
                        Value="False" />
                </OnPlatform>
            </VerticalStackLayout.IsVisible>
            <Image Source="powvo.png"
                   WidthRequest="320"
                   HeightRequest="600" 
                   Opacity=".7"
                   VerticalOptions="Center"
                   />
        </VerticalStackLayout>


    </Grid>
</ContentPage>
